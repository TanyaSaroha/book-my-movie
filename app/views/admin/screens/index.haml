.card.shadow.mb-4.mt-4
  .card-header
    .row
      .col-lg-10
        %h6.m-0.font-weight-bold.text-info Multiplex Screens - Today's shows
    .row.mt-4
      .col-2.text-info.font-weight-bold.float-right
        Filter By Date
      .col-2
        = date_field_tag "date", params[:date], class: 'form-control', disabled: false


  .card-body#screenDetails
    = render partial: 'show_details', locals: {date: params[:date]}

:javascript
  $("#date").on('change', function(){
    get_shows();
  });

  function get_shows(){
    date = $("#date").val()
    $.ajax({
      url: "/admin/screens?date=" + date,
      type: "GET",
      success:function(data){
      }
    })
  }
