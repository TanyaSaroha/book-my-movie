.modal-header
  %h4#myModalLabel.modal-title Update movie
  %button.close{"data-dismiss" => "modal", :type => "button"} x
.modal-body
  = simple_form_for @movie, url: admin_movie_path(@movie.id, date: params[:date]) do |f|
    .form-group.row
      .col-sm-12.mb-3.mb-sm-0
        = f.text_field :name, label: false, placeholder: "Movie Name", class: "form-control", required: true
    = f.submit "Save", class: 'btn btn-user btn-primary btn-block'
