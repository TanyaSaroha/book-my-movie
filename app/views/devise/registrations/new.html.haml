.row.justify-content-center
  .col-xl-10.col-lg-12.col-md-9
    .card.o-hidden.border-0.shadow-lg.my-5
      .card-body.p-0
        .row
          .col-lg-6.d-none.d-lg-block.bg-login-image
          .col-lg-6
            = link_to root_path, {class: 'btn btn-warning btn-circle float-right'} do
              %i.fa.fa-home{title: "Home"}
            .p-5
              .text-center
                %h1.h4.text-gray-900.mb-4 Welcome to Book My Movie!
                %h2 Admin Sign up
                = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
                  = f.error_notification
                  - if resource.errors.present?
                    .text.text-sm.text-danger= resource.errors.full_messages.join(", ")
                  .form-group.mb-4
                    = f.text_field :email, required: true, autofocus: true, input_html: { autocomplete: "email" }, class: "form-control", placeholder: "User name"
                  .form-group.mb-4
                    = f.password_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" }, class: "form-control", placeholder: "Password"
                  .form-group.mb-4
                    = f.password_field :password_confirmation, required: true, input_html: { autocomplete: "new-password" }, class: "form-control", placeholder: "Confirm Password"
                  = f.submit "Sign Up", class: 'btn btn-login px-4 btn-sm btn-primary'
